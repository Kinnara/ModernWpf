<local:TestPage
    x:Class="MUXControlsTestApp.RadioMenuFlyoutItemPage"
    x:Name="RadioMenuFlyoutItemTestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MUXControlsTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="http://schemas.modernwpf.com/2019"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Background="{DynamicResource ApplicationPageBackgroundThemeBrush}"
        Margin="12">
        <StackPanel
            x:Name="ContentArea"
            Orientation="Horizontal">
            <Border
                Style="{DynamicResource StandardGroupingBorder}"
                VerticalAlignment="Top"
                MinWidth="250">
                <StackPanel>
                    <TextBlock
                        Text="Sample controls"
                        Style="{DynamicResource StandardGroupHeader}" />

                    <Button
                        AutomationProperties.Name="FlyoutButton"
                        Content="Click Me"
                        Margin="12">
                        <controls:FlyoutService.Flyout>
                            <controls:MenuFlyout x:Name="ButtonMenuFlyout">
                                <MenuItem Header="A Normal Item" />

                                <Separator />

                                <controls:RadioMenuItem
                                    AutomationProperties.Name="RedItem"
                                    Header="Red" />
                                <controls:RadioMenuItem
                                    AutomationProperties.Name="OrangeItem"
                                    Header="Orange"
                                    IsChecked="true" />
                                <controls:RadioMenuItem
                                    AutomationProperties.Name="YellowItem"
                                    Header="Yellow" />
                                <controls:RadioMenuItem
                                    AutomationProperties.Name="GreenItem"
                                    Header="Green" />
                                <controls:RadioMenuItem
                                    AutomationProperties.Name="BlueItem"
                                    Header="Blue" />
                                <controls:RadioMenuItem
                                    AutomationProperties.Name="IndigoItem"
                                    Header="Indigo" />
                                <controls:RadioMenuItem
                                    AutomationProperties.Name="VioletItem"
                                    Header="Violet" />

                                <Separator />

                                <controls:RadioMenuItem
                                    AutomationProperties.Name="CompactItem"
                                    Header="Compact"
                                    GroupName="Size"
                                    IsChecked="true" />
                                <controls:RadioMenuItem
                                    AutomationProperties.Name="NormalItem"
                                    Header="Normal"
                                    GroupName="Size" />
                                <controls:RadioMenuItem
                                    AutomationProperties.Name="ExpandedItem"
                                    Header="Expanded"
                                    GroupName="Size" />
                            </controls:MenuFlyout>
                        </controls:FlyoutService.Flyout>
                    </Button>

                    <ButtonEx AutomationProperties.Name="SubMenuFlyoutButton" Content="I have a sub menu" Margin="12">
                        <ButtonEx.Flyout>
                            <MenuFlyout x:Name="ButtonSubMenuFlyout">
                                <MenuFlyoutItem Text="No Icon"/>

                                <MenuFlyoutSeparator />

                                <RadioMenuFlyoutItem GroupName="SortGroup" AutomationProperties.Name="NameItem" Text="Name" IsChecked="true"/>
                                <RadioMenuFlyoutItem GroupName="SortGroup" AutomationProperties.Name="DateItem" Text="Date"/>
                                <RadioMenuFlyoutItem GroupName="SortGroup" AutomationProperties.Name="SizeItem" Text="Size"/>

                                <MenuFlyoutSubItem x:Name="RadioSubMenu" AutomationProperties.Name="RadioSubMenu" Text="Other" Style="{StaticResource RadioMenuFlyoutSubItemStyle}">
                                    <RadioMenuFlyoutItem GroupName="SortGroup" AutomationProperties.Name="AlbumNameItem" Text="Album Name"/>
                                    <RadioMenuFlyoutItem GroupName="SortGroup" AutomationProperties.Name="ArtistNameItem" Text="Artist Name"/>
                                    <RadioMenuFlyoutItem GroupName="SortGroup" AutomationProperties.Name="GenreItem" Text="Genre"/>
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </ButtonEx.Flyout>
                    </ButtonEx>

                    <ButtonEx AutomationProperties.Name="IconSubMenuFlyoutButton" Content="I have a sub menu with icons" Margin="12">
                        <ButtonEx.Flyout>
                            <MenuFlyout x:Name="ButtonIconSubMenuFlyout">
                                <MenuFlyoutItem Text="Has Icon" Icon="Save"/>

                                <MenuFlyoutSeparator />

                                <RadioMenuFlyoutItem GroupName="AnotherSortGroup" AutomationProperties.Name="AnotherNameItem" Icon="People" Text="Name" IsChecked="true"/>
                                <RadioMenuFlyoutItem GroupName="AnotherSortGroup" AutomationProperties.Name="AnotherDateItem" Text="Date"/>
                                <RadioMenuFlyoutItem GroupName="AnotherSortGroup" AutomationProperties.Name="AnotherSizeItem" Text="Size"/>

                                <MenuFlyoutSubItem Text="Other" Style="{StaticResource RadioMenuFlyoutSubItemStyle}">
                                    <RadioMenuFlyoutItem GroupName="AnotherSortGroup" AutomationProperties.Name="AnotherAlbumNameItem" Text="Album Name"/>
                                    <RadioMenuFlyoutItem GroupName="AnotherSortGroup" AutomationProperties.Name="AnotherArtistNameItem" Text="Artist Name"/>
                                    <RadioMenuFlyoutItem GroupName="AnotherSortGroup" AutomationProperties.Name="AnotherGenreItem" Text="Genre"/>
                                </MenuFlyoutSubItem>

                                <MenuFlyoutSubItem Text="More" Icon="People" Style="{StaticResource RadioMenuFlyoutSubItemStyle}">
                                    <RadioMenuFlyoutItem GroupName="AnotherSortGroup" AutomationProperties.Name="OneMoreThing" Text="One More"/>
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </ButtonEx.Flyout>
                    </ButtonEx>

                    <ButtonEx Content="I have icons" Margin="12">
                        <ButtonEx.Flyout>
                            <MenuFlyout>
                                <ToggleMenuFlyoutItem Text="A Toggle Item"/>
                                <RadioMenuFlyoutItem Text="A Radio Item"/>
                                <RadioMenuFlyoutItem x:Name="IconRadioMenuFlyoutItem" Text="Radio And Has Icon"/>
                                <RadioMenuFlyoutItem x:Name="IconRadioMenuFlyoutItem2" Text="Radio with icon and accelerator" InputGestureText="Ctrl+S"/>
                                <RadioMenuFlyoutItem Text="Radio accelerator" InputGestureText="Ctrl+S"/>
                                <MenuFlyoutItem x:Name="IconMenuFlyoutItem" Text="Just Has Icon"/>
                            </MenuFlyout>
                        </ButtonEx.Flyout>
                    </ButtonEx>
                </StackPanel>
            </Border>

            <StackPanelEx x:Name="InfoGrid" Margin="12,0,0,0" Style="{ThemeResource StandardGroupingStackPanel}" Orientation="Horizontal"
                        MinWidth="250" VerticalAlignment="Top">
                <StackPanel x:Name="ItemNames" Margin="0,0,12,0"/>

                <StackPanel x:Name="ItemStates" Grid.Column="1"/>
            </StackPanelEx>

        </StackPanel>
    </Grid>
</local:TestPage>
