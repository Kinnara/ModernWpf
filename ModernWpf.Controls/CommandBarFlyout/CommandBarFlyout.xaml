                                                <TranslateTransform x:Name="MoreButtonTransform" />
                                            </ToggleButton.RenderTransform>
                                            <ui:FontIcon
                                                x:Name="EllipsisIcon"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
