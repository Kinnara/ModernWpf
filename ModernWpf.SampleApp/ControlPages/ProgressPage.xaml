<UserControl
    x:Class="ModernWpf.SampleApp.ControlPages.ProgressPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://www.modernwpf.com"
    xmlns:controls="clr-namespace:ModernWpf.SampleApp.Controls"
    mc:Ignorable="d"
    d:DesignWidth="1200"
    d:DesignHeight="900">

    <ScrollViewer>
        <StackPanel Margin="{StaticResource ControlPageContentMargin}">
            <controls:ControlExample HeaderText="An indeterminate progress bar.">
                <ProgressBar
                    x:Name="progressBar"
                    Width="130"
                    HorizontalAlignment="Left"
                    IsIndeterminate="True" />
            </controls:ControlExample>
            <controls:ControlExample HeaderText="A determinate progress bar.">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar
                        x:Name="ProgressBar2"
                        Width="130" />
                    <TextBlock
                        x:Name="Control2Output"
                        Style="{StaticResource OutputTextBlockStyle}"
                        Width="60"
                        TextAlignment="Center" />
                    <RepeatButton
                        Content="Click and hold"
                        Click="RepeatButton_Click" />
                </StackPanel>
            </controls:ControlExample>
            <controls:ControlExample HeaderText="An indeterminate progress ring.">
                <ui:ProgressRing
                    IsActive="{Binding IsOn, ElementName=ProgressToggle}"
                    Height="60"
                    Width="60"
                    HorizontalAlignment="Left" />

                <controls:ControlExample.Options>
                    <controls:SimpleStackPanel>
                        <ui:ToggleSwitch
                            x:Name="ProgressToggle"
                            Header="Toggle work"
                            OffContent="Do work"
                            OnContent="Working"
                            IsOn="True" />
                    </controls:SimpleStackPanel>
                </controls:ControlExample.Options>
            </controls:ControlExample>
        </StackPanel>
    </ScrollViewer>
</UserControl>
