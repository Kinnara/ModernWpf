<ui:Page
    x:Class="ModernWpf.SampleApp.ControlPages.CommandBarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModernWpf.SampleApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sc="clr-namespace:SamplesCommon;assembly=SamplesCommon"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="CommandBar"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Resources>
        <sys:String
            x:Key="MultipleButtonsSecondaryCommands"
            xml:space="preserve">
        &lt;AppBarButton Icon=&quot;Add&quot; Label=&quot;Button 1&quot;/&gt;
        &lt;AppBarButton Icon=&quot;Delete&quot; Label=&quot;Button 2&quot;/&gt;
        &lt;AppBarSeparator /&gt;
        &lt;AppBarButton Icon=&quot;FontDecrease&quot; Label=&quot;Button 3&quot;/&gt;
        &lt;AppBarButton Icon=&quot;FontIncrease&quot; Label=&quot;Button 4&quot;/&gt;</sys:String>
    </Page.Resources>
    <StackPanel>
        <local:ControlExample
            x:Name="Example3"
            HeaderText="A command bar with labels on the side free floating in a page">
            <local:ControlExample.Example>
                <StackPanel>
                    <ui:CommandBar
                        x:Name="PrimaryCommandBar"
                        DefaultLabelPosition="Right"
                        IsOpen="False">
                        <ui:AppBarButton x:Name="AddButton" Click="OnElementClicked" Icon="Add" Label="Add" />
                        <ui:AppBarButton x:Name="EditButton" Click="OnElementClicked" Icon="Edit" Label="Edit" />
                        <ui:AppBarButton x:Name="ShareButton" Click="OnElementClicked" Icon="Share" Label="Share" />
                        <ui:CommandBar.SecondaryCommands>
                            <ui:AppBarButton x:Name="SettingsButton" Click="OnElementClicked" Icon="Setting" Label="Settings" />
                        </ui:CommandBar.SecondaryCommands>
                    </ui:CommandBar>
                    <TextBlock
                        x:Name="SelectedOptionText"
                        Padding="0,8,0,0" />
                </StackPanel>
            </local:ControlExample.Example>
            <local:ControlExample.Options>
                <StackPanel>
                    <TextBlock Text="Show or hide" />
                    <Button
                        Margin="0,12,0,0"
                        Click="OpenButton_Click"
                        Content="Open command bar" />
                    <Button
                        Margin="0,12,0,0"
                        Click="CloseButton_Click"
                        Content="Close command bar" />
                    <TextBlock
                        Margin="0,16,0,0"
                        Text="Modify content" />
                    <Button
                        Margin="0,12,0,0"
                        Click="AddSecondaryCommands_Click"
                        Content="Add secondary commands" />
                    <Button
                        Margin="0,12,0,0"
                        Click="RemoveSecondaryCommands_Click"
                        Content="Remove secondary commands" />
                </StackPanel>
            </local:ControlExample.Options>
            <local:ControlExample.Xaml>
                <sys:String xml:space="preserve">
&lt;CommandBar Background=&quot;Transparent&quot; IsOpen=&quot;$(IsOpen)&quot; DefaultLabelPosition=&quot;Right&quot;$(IsSticky)&gt;
    &lt;AppBarButton Icon=&quot;Add&quot; Label=&quot;Add&quot;/&gt;    
    &lt;AppBarButton Icon=&quot;Edit&quot; Label=&quot;Edit&quot;/&gt;
    &lt;AppBarButton Icon=&quot;Share&quot; Label=&quot;Share&quot;/&gt;
    &lt;CommandBar.SecondaryCommands&gt;
        &lt;AppBarButton Icon=&quot;Setting&quot; Label=&quot;Settings&quot;/&gt;$(MultipleButtonsSecondaryCommands)
    &lt;/CommandBar.SecondaryCommands&gt;
&lt;/CommandBar&gt;
</sys:String>
            </local:ControlExample.Xaml>
        </local:ControlExample>
    </StackPanel>
</ui:Page>
