<ui:Page
    x:Class="ModernWpf.SampleApp.ControlPages.ProgressBarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sc="clr-namespace:SamplesCommon;assembly=SamplesCommon"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    mc:Ignorable="d">

    <ScrollViewer>
        <ui:SimpleStackPanel Style="{StaticResource ControlPageContentPanelStyle}">
            <sc:ControlExample HeaderText="An indeterminate progress bar.">
                <ui:ProgressBar
                    Width="130"
                    Margin="10,10,0,0"
                    VerticalAlignment="Top"
                    IsIndeterminate="True"
                    ShowError="{Binding IsChecked, ElementName=ErrorRB}"
                    ShowPaused="{Binding IsChecked, ElementName=PausedRB}" />

                <sc:ControlExample.Options>
                    <StackPanel>
                        <RadioButton
                            x:Name="RunningRB"
                            Content="Running"
                            GroupName="ProgressState"
                            IsChecked="True" />
                        <RadioButton
                            x:Name="PausedRB"
                            Content="Paused"
                            GroupName="ProgressState" />
                        <RadioButton
                            x:Name="ErrorRB"
                            Content="Error"
                            GroupName="ProgressState" />
                    </StackPanel>
                </sc:ControlExample.Options>
            </sc:ControlExample>

            <sc:ControlExample HeaderText="A determinate progress bar.">
                <StackPanel Orientation="Horizontal">
                    <ProgressBar
                        x:Name="ProgressBar2"
                        Width="130"
                        Value="{Binding ElementName=ProgressValue, Path=Value, Mode=OneWay}" />
                    <TextBlock
                        x:Name="Control2Output"
                        Width="60"
                        Style="{StaticResource OutputTextBlockStyle}"
                        TextAlignment="Center" />
                    <TextBlock
                        x:Name="ProgresLabel"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="Progress" />
                    <ui:NumberBox
                        x:Name="ProgressValue"
                        AutomationProperties.LabeledBy="{Binding ElementName=ProgresLabel}"
                        Maximum="100"
                        Minimum="0"
                        SpinButtonPlacementMode="Inline"
                        Value="0" />
                </StackPanel>
            </sc:ControlExample>

            <sc:ControlExample VerticalContentAlignment="Center" HeaderText="An indeterminate progress ring.">
                <ui:ProgressRing
                    Width="60"
                    Height="60"
                    IsActive="{Binding IsOn, ElementName=ProgressToggle}" />

                <sc:ControlExample.Options>
                    <ui:ToggleSwitch
                        x:Name="ProgressToggle"
                        Header="Toggle work"
                        IsOn="True"
                        OffContent="Do work"
                        OnContent="Working" />
                </sc:ControlExample.Options>
            </sc:ControlExample>
        </ui:SimpleStackPanel>
    </ScrollViewer>
</ui:Page>
