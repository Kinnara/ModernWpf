<Page
    x:Class="ModernWpf.SampleApp.ControlPages.ThreadedUIPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ModernWpf.SampleApp.ControlPages"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:sc="clr-namespace:SamplesCommon;assembly=SamplesCommon"
    xmlns:threaded="clr-namespace:ModernWpf.SampleApp.ThreadedUI"
    mc:Ignorable="d"
    Style="{StaticResource PageStyle}">

    <ScrollViewer>
        <ui:SimpleStackPanel Style="{StaticResource ControlPageContentPanelStyle}">
            <sc:ControlExample
                x:Name="ProgressBarExample"
                HeaderText="A threaded progress control."
                VerticalContentAlignment="Center">
                <threaded:ThreadedVisualHost
                    x:Name="ProgressControlHost"
                    Visibility="{Binding ElementName=IsVisibleCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                    ChildType="{x:Type threaded:ThreadedProgressBar}"
                    ChildChanged="ProgressControlHost_ChildChanged" />

                <sc:ControlExample.Options>
                    <ui:SimpleStackPanel Style="{StaticResource OptionsPanelStyle}">
                        <CheckBox
                            Content="IsBusy"
                            IsChecked="{Binding IsBusy}" />
                        <CheckBox
                            x:Name="IsVisibleCheckBox"
                            Content="IsVisible"
                            IsChecked="True" />
                        <Button
                            Content="Unload"
                            Click="LoadOrUnload" />
                        <Button
                            Content="Toggle ChildType"
                            Click="ToggleChildType" />
                        <Button
                            Content="Block main thread"
                            Click="BlockMainThread" />
                    </ui:SimpleStackPanel>
                </sc:ControlExample.Options>
            </sc:ControlExample>
        </ui:SimpleStackPanel>
    </ScrollViewer>
</Page>
